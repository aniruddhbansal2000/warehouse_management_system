<!-- include header part -->
<% include partials/header.ejs %>

    <div class="container">
        <% if (message != '') { %>
        <!-- have a MESSAGE (so displayed , ELSE NOT) -->
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-product-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="product_name" id="product_name" placeholder="Name" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="product_type" id="product_type" placeholder="Type" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="product_company" id="product_company" placeholder="Company" required>
                </div>

            </div>
            <div class="form-row">

                <div class="form-group col-md-6">
                    <input type="number" class="form-control" name="current_price" id="current_price" placeholder="Price" required>
                </div>
                

                <div class="col-md-12">
                    <label for="product_image"><b>Product Image</b></label><br>
                    <input type="file" name="product_image" id="product_image" class="" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Add Product</button>
        </form>
</div>
</body>
</html>
