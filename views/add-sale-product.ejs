<!-- include header part -->
<% include partials/header.ejs %>


    

    <div class="container">
        <% if (message != '') { %>
        <!-- have a MESSAGE (so displayed , ELSE NOT) -->
            <p class="text-center text-danger"><%= message %></p>
        <% } %>

        
        <form class="add-product-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                
                <div class="form-group col-md-6">
                    <input type="number" class="form-control" name="product_id" id="product_id" placeholder="Product ID" required>
                </div>
                <!-- <div class="form-group col-md-6">
                    <input type="number" class="form-control" name="sale_id" id="sale_id" placeholder="Sale ID" required>
                </div> -->
                <div class="form-group col-md-6">
                    <input type="number" class="form-control" name="quantity" id="quantity" placeholder="Quantity" required>
                </div>

                <div class="form-group col-md-6">
                    <input type="number" class="form-control" name="price" id="price" placeholder="Price" required>
                </div>

            </div>
            <button type="submit" class="btn btn-primary float-right">Add Product To Sale</button>
        </form>
    </div>

</body>
</html>