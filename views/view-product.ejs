<!-- this is FRONTEND -> of HOME PAGE -->

<% include partials/header.ejs %>

<body>

<div class="page-wrapper">
    <nav class="navbar navbar-light bg-light">
        <span class="navbar-brand mb-0 h1"><a href="/product">Inventory Products</a></span>
        <!-- *** Here need TO ADD LINKS TO PAGES (for different activities) -->
        <a class="float-right" href="/product/add" title="Add a New Product">Add a Product</a>
        <a class="float-right" href="/sale" title="View Sales">View Sales</a>
    </nav>

    <div class="table-wrapper">
        <!-- recieved products TABLE by routing of home page request -->
        <% if (product.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr> 
                        <!-- headers (for RESPECTIVE col(COLUMNS)) -->
                        <th scope="col">ID</th>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Type</th>
                        <th scope="col">Company</th>
                        <th scope="col">Current Stock</th>
                        <th scope="col">Price</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% product.forEach((product, index) => { %>
                    <!-- run for each object(named==product) in products table-->
                        <tr>
                            <!-- DATA ELEMENTS (below header) -->
                            <th scope="row"><%= product.product_id %></th>
                            <!-- ??? HOW IMAGE RETRIEVED (name = product.image) -->
                            <!-- ** NOT PART OF DATABASE (ONLY NAME STORED) -->
                            <td><img src="/assets/img/<%= product.product_image %>" class="rounded-circle product-img" alt=""></td>
                            <td><%= product.product_name %></td>
                            <td><%= product.product_type %></td>
                            <td><%= product.product_company %></td>
                            <td><%= product.current_stock %></td>
                            <td><%= product.current_price %></td>
                            <td>
                                <!-- take to edit page (for that product id) -->
                                <!-- noopener => opening page SEPERATE , NO ACCESS -->
                                <a href="/product/edit/<%= product.product_id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <!-- <a href="/delete/<%= product.id %>" class="btn btn-sm btn-danger">Delete</a> -->
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No products found. Go <a href="/product/add" >here</a> to add products.</p>
        <% } %>
    </div>
</div>
</body>
</html>